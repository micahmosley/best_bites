<h1>Top Ten Meals</h1>
<br>
<br>


<div class="row">
<div class="column">
<ol>
<% @top_five.each do |meal|%>
    <li class="bite">
    <image class="top" src="<%=(url_for(meal.photo))%>">
    <h3><%=meal.name%></h3>
    <p><%="#{meal.number_of_favorites} favorites!!!"%></p>
    <p><%= link_to "See #{meal.name}", meal_path(meal)%></p><br><br><br><br>
    </li>
<%end%>
</ol>
</div>
<div class="column">
<% if Meal.top_ten.length >5%>
    <ol start="6">
    <% @second_five.each do |meal|%>
        <li class="bite">
        <image class="top" src="<%=(url_for(meal.photo))%>">
        <h3><%=meal.name%></h3>
        <p><%="#{meal.number_of_favorites} favorites!!!"%></p>
        <p><%= link_to "See #{meal.name}", meal_path(meal)%></p><br><br><br><br>
        </li>
    <%end%>
    </ol>
<%end%>
</div>
</div>